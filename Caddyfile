api.k1cc0.me {
  root ./public

  fastcgi / /run/php/php7.0-fpm.sock php {
    index index.php
  }

  cors / {
    origin *
    methods GET,POST,PUT,DELETE,HEAD,OPTIONS
    allowed_headers Content-Type,Authorization
  }  

  rewrite {
    to {path} {path}/ /index.php?{query}
  }  
}

cp.k1cc0.me {
  root ./cp/dist
}
